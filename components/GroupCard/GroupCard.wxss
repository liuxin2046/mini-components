.activity-card {
  font-size: 28rpx;
  font-weight: 400;
  color: #010101;
}
.activity-card.gap {
  margin-bottom: 40rpx;
}
.activity-card .number {
  color: #F25448;
}
.activity-card .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activity-card .header .label {
  font-size: 32rpx;
}
.activity-card .header .desc {
  flex-grow: 1;
  color: rgba(1, 1, 1, 0.6);
  padding-left: 40rpx;
}
.activity-card .header .more {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: rgba(1, 1, 1, 0.6);
}
.activity-card .header .arrow {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(-90deg);
}
.activity-card .header .arrow.hide {
  transform: rotate(0deg);
}
.activity-card .card {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.activity-card .card .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.activity-card .card .content {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 24rpx;
  padding-right: 20rpx;
}
.activity-card .card .content .number {
  color: #F25448;
}
.activity-card .card .content .time {
  font-size: 24rpx;
  color: rgba(1, 1, 1, 0.6);
  display: flex;
  align-items: center;
}
.activity-card .card .content .count-down {
  display: inline-block;
}
.activity-card .card .join {
  background: #010101;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  color: #fff;
}
.activity-card .wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.activity-card .wrapper .content {
  text-align: center;
  width: 84%;
  min-height: 200rpx;
  background-color: #fff;
  padding-top: 40rpx;
}
.activity-card .wrapper .content .title {
  font-size: 30rpx !important;
}
.activity-card .wrapper .content .count-down {
  display: flex;
  justify-content: center;
  align-items: center;
}
.activity-card .wrapper .content .member-list {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.activity-card .wrapper .content .member-list .member,
.activity-card .wrapper .content .member-list .invite {
  position: relative;
  width: 130rpx;
  padding-top: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #010101;
  margin-bottom: 20rpx;
}
.activity-card .wrapper .content .member-list .member .sponsor,
.activity-card .wrapper .content .member-list .invite .sponsor {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 22rpx;
  left: 0rpx;
  transform: rotate(-10deg);
}
.activity-card .wrapper .content .member-list .member .avatar,
.activity-card .wrapper .content .member-list .invite .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: auto;
}
.activity-card .wrapper .content .member-list .invite {
  color: rgba(1, 1, 1, 0.45);
}
.activity-card .wrapper .content .member-list .invite .avatar {
  background: rgba(1, 1, 1, 0.06);
}
.activity-card .wrapper .content .join-btn {
  margin: 60rpx;
  font-size: 32rpx;
  color: #fff;
  line-height: 92rpx;
  background: #010101;
}
.activity-card .wrapper .close {
  display: inline-block;
  margin: 40rpx auto 0;
}
.activity-card .wrapper .close .close-icon {
  width: 56rpx;
  height: 56rpx;
}
.activity-card .group-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.activity-card .group-wrapper .content {
  text-align: center;
  width: 84%;
  min-height: 200rpx;
  background-color: #fff;
  padding-top: 40rpx;
}
.activity-card .group-wrapper .content .title {
  font-size: 30rpx !important;
}
.activity-card .group-wrapper .content .group-list {
  max-height: 350rpx;
  overflow-y: auto;
}
.activity-card .group-wrapper .content .group-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.activity-card .group-wrapper .content .group-card .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.activity-card .group-wrapper .content .group-card .card-content {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 24rpx;
  padding-right: 20rpx;
}
.activity-card .group-wrapper .content .group-card .card-content .number {
  color: #F25448;
}
.activity-card .group-wrapper .content .group-card .card-content .time {
  font-size: 24rpx;
  color: rgba(1, 1, 1, 0.6);
  display: flex;
  align-items: center;
}
.activity-card .group-wrapper .content .group-card .card-content .count-down {
  display: inline-block;
}
.activity-card .group-wrapper .content .group-card .join {
  background: #010101;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  color: #fff;
}
.activity-card .group-wrapper .close {
  display: inline-block;
  margin: 40rpx auto 0;
}
.activity-card .group-wrapper .close .close-icon {
  width: 56rpx;
  height: 56rpx;
}
